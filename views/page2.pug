doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Document
h1 List of Students in the Database 
  table(border=2)
    thead
      tr
        th(Scope='col') Surname
        th(Scope='col') Age
        th(Scope='col') Email 
    tbody
      each user in users 
        tr 
          td=user.Surname
          td=user.Age
          td=user.Email 
          td
            form(method='POST' action='/delete')
              input(type="hidden",name='id' ,value=user.id)
              button(type='submit') Delete 
          td
            a(href="/edit/"+user._id) Edit
             

